@model Todo;
Update a specific list item

@if (Model == null) 
{
    <div class="container">
        <div class="row">
            <div class="col-8">
                <p>
                    We could not find the item you were looking for
                </p>
            </div>
        </div>
    </div>
} else {
    @using(Html.BeginForm())
    {
        <div>
            <div>
                @Html.LabelFor(x => x.Title)
                @Html.TextBoxFor(x => x.Title)
                @Html.ValidationMessageFor(x => x.Title)
            </div>

            <div>
                @Html.LabelFor(x => x.Description)
                @Html.TextAreaFor(x => x.Description)
                @Html.ValidationMessageFor(x => x.Description)
            </div>

            <div>
                <h3>Status</h3>
                <label for="to-be-done">To be done <input type="radio" id="to-be-done" name="Status" value="ToBeDone" checked=@( Model.Status == "ToBeDone" ) /></label>
                <label for="on-going">On going <input type="radio" id="on-going" name="Status" value="OnGoing" checked=@( Model.Status == "OnGoing" )/></label>
                <label for="done">Done <input type="radio" id="done" name="Status" value="Done" checked=@( Model.Status == "Done" )/></label>
            </div>

            <div>
                <input type="submit" value="Save" />
            </div>
        </div>
    }
}